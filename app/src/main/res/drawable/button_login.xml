<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the button background for its normal state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#f7ad19"/> <!-- Button color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
            <padding android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/> <!-- Padding inside the button -->
        </shape>
    </item>
    <!-- This is the button background for its pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF3700B3"/> <!-- Darker button color when pressed -->
            <corners android:radius="4dp"/>
            <padding android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</selector>
